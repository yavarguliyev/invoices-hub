{
	"name": "invoices-hub",
	"version": "1.0.0",
	"description": "Invoices Hub",
	"main": "dist/index.js",
	"repository": "git@github.com:yavarguliyev/invoices-hub.git",
	"author": "Yavar Guliyev",
	"license": "MIT",
	"private": true,
	"scripts": {
		"clean:dist": "rimraf dist/*",
		"lint": "esw --watch --ext .ts src",
		"build": "yarn clean:dist",
		"clean:migrations": "rimraf migrations/*.js",
		"build:migrations": "yarn clean:migrations && tsc --emitDecoratorMetadata true --experimentalDecorators true --outDir migrations migrations/*.ts",
		"migrations:create": "typeorm migration:create --dir migrations --name",
		"migrations:run": "yarn build:migrations && typeorm migration:run",
		"migrations:revert": "yarn build:migrations && typeorm migration:revert",
		"migrations:run:default": "yarn migrations:run --connection default",
		"migrations:revert:default": "yarn migrations:revert --connection default",
		"mup": "yarn migrations:run:default",
		"mdn": "yarn migrations:revert:default",
		"start:tsclint": "yarn clean:dist && concurrently --kill-others --names lint,tsc,nodemon --prefix-colors green,blue,yellow \"yarn lint\" \"tsc --preserveWatchOutput --watch\"",
		"start": "yarn start:tsclint \"sleep 8 && nodemon\""
	},
	"dependencies": {
		"amqplib": "^0.10.5",
		"bcrypt": "^5.1.1",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.1",
		"dotenv": "^16.4.7",
		"express": "^4.21.2",
		"license-checker": "^25.0.1",
		"pg": "^8.13.1",
		"redis": "^4.7.0",
		"reflect-metadata": "^0.2.2",
		"rimraf": "^6.0.1",
		"routing-controllers": "^0.10.4",
		"ts-node": "^10.9.2",
		"typedi": "^0.10.0",
		"typeorm": "^0.3.20",
		"typeorm-typedi-extensions": "^0.4.1",
		"winston": "^3.17.0"
	},
	"devDependencies": {
		"@types/amqplib": "^0.10.6",
		"@types/bcrypt": "^5.0.2",
		"@types/express": "^5.0.0",
		"@types/node": "^22.10.7",
		"@typescript-eslint/eslint-plugin": "^5.42.0",
		"@typescript-eslint/parser": "^5.42.0",
		"concurrently": "^9.1.2",
		"eslint": "^8.26.0",
		"eslint-config-standard": "^17.0.0",
		"eslint-plugin-import": "^2.26.0",
		"eslint-plugin-n": "^15.4.0",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-promise": "^6.1.1",
		"eslint-watch": "^8.0.0",
		"nodemon": "^3.1.9",
		"typescript": "^5.7.3"
	},
	"packageManager": "yarn@4.6.0"
}
